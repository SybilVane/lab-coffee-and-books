<div class='container hometitle'>

  <h1>Create new place</h1>

  <hr /><br />
  <div class='row'>
    <div class='col-4'>
      <form method='POST' action='/places/create'>

        <label>Name
          <input name='name' type='text' class='form-control' />
        </label>
        <br /><br />

        <label>Latitude
          <input name='lat' type='text' class='form-control' />
        </label>
        <br /><br />

        <label>Longitude
          <input name='lng' type='text' class='form-control' />
        </label>
        <br /><br />

        <label for='type' name='type'>What kind of place is it?</label>
        <select name='type' class='form-control'>
          <option value='Coffee Shop'>Coffee Shop</option>
          <option value='Bookstore'>Bookstore</option>
        </select>
        <br /><br />
        <input type='submit' value='Create place' />

      </form>
    </div>
  </div>
</div>